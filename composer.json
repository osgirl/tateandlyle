{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^8.6.9",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "^1.6.0",
        "drupal/acquia_connector": "^1.5.0",
        "drupal/acsf": "^1.32.0",
        "drupal/cog": "^1.0.0",
        "drupal/console": "^1.0.0-rc14",
        "drupal/core": "^8.0",
        "drupal/features": "^3.0.0",
        "drupal/memcache": "2.x-dev",
        "drupal/search_api": "1.0.0-beta3",
        "drupal/search_api_solr": "1.0.0-beta1",
        "drupal/security_review": "*",
        "drupal/seckit": "^1.0.0-alpha2",
        "drush/drush": "^8.1.8",
        "drupal/admin_toolbar": "^1.0",
        "drupal/paragraphs": "^1.0",
        "drupal/field_group": "1.0.0-rc4",
        "drupal/bootstrap": "^3.0.0",
        "drupal/config_rewrite": "^1.0@beta",
        "drupal/country": "*",
        "drupal/shield": "^1.0.0",
        "drupal/facets": "1.0.0-alpha6",
        "acquia/lightning": "2.0.2",
        "drupal/improved_multi_select": "^1.3",
        "drupal/webform": "5.0-beta4",
        "drupal/access_unpublished": "1.0-alpha2",
        "drupal/colorbox": "1.*",
        "jackmoore/colorbox": "1.6.4",
        "drupal/default_content": "1.0-alpha3",
        "dflydev/dot-access-data": "dev-master",
        "drupal/simple_menu_icons": "1.0-beta5"
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "behat/mink": "~1.7",
        "behat/mink-selenium2-driver": "^1.3.1",
        "drupal/drupal-extension": "^3.2",
        "drupal-composer/drupal-scaffold": "^2.1.0",
        "jarnaiz/behat-junit-formatter": "^1.3.2",
        "phpunit/phpunit": "^5.4",
        "se/selenium-server-standalone": "^2.53",
        "squizlabs/php_codesniffer": "^2.7",
        "drupal/devel": "^1.0.0-alpha1",
        "jakoch/phantomjs-installer": "^2.1.1-p07"
    },
    "scripts": {
        "post-create-project-cmd": [
            "rm -f .travis.yml",
            "rm -f README.md",
            "rm -f LICENSE.txt",
            "blt create-project"
        ],
        "blt-alias": "blt install-alias -Dcreate_alias=true",
        "nuke": [
            "rm -rf vendor composer.lock",
            "@composer clearcache",
            "@composer install"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "install-phantomjs": [
            "rm -rf vendor/bin/phantomjs",
            "PhantomInstaller\\Installer::installPhantomJS"
        ]
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "colorbox": {
            "type": "package",
            "package": {
                "name": "jackmoore/colorbox",
                "version": "1.6.4",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/jackmoore/colorbox/archive/1.6.4.zip",
                    "type": "zip"
                }
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\PHPUnit\\": "tests/phpunit/src/"
        }
    },
    "extra": {
        "blt": {
            "update": true
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ]
        },
        "patches": {
            "drupal/core": {
                "Duplicate AJAX wrapper around a file field": "https://www.drupal.org/files/issues/duplicate_ajax_wrapper-2346893-176.patch",
                "Exposed date filter leads to a notice": "https://www.drupal.org/files/issues/2811887-19-fix-tests.patch"
            },
            "drupal/paragraphs": {
                "Field Group not working on node edit inside paragraph": "https://www.drupal.org/files/issues/field_group_not_working-2675136-53.patch",
                "Empty required fields not providing meaningful error messages": "https://www.drupal.org/files/issues/empty-required-error-message-2788607-17.patch"
            },
            "drupal/search_api": {
                "search_api_node_grants is a reserved value and cannot be used as the machine name of a normal field": "https://www.drupal.org/files/issues/2761749-12--db_defaults_node_access_field_id.patch"
            },
            "acquia/lightning": {
                "New LightningExtension subcontexts do not autoload": "https://www.drupal.org/files/issues/2836258-3-lightning-extension-autoload.patch"
            },
            "drupal/facets": {
                "Call to undefined method NodeType::hasTranslation inTranslateEntityProcessor": "https://www.drupal.org/files/issues/2823545-3.patch"
            },
            "drupal/webform": {
                "Preview page: Attach contact form or other form elements": "https://www.drupal.org/files/issues/preview_page_attach-2839834-15.patch"
            }
        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            },
            "excludes": [
                "sites/development.services.yml"
            ]
        },
        "enable-patching": true
    }
}
